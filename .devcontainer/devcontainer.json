{
  "name": "mercier-app",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "node",
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "updateRemoteUserUID": true
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "remoteUser": "node",
  "postCreateCommand": "corepack prepare pnpm@9 --activate && corepack pnpm install && git config --global user.name 't-mercier' && git config --global user.email 'timothee@mercier.app'",
  "forwardPorts": [3000, 8080],
  "containerEnv": { "NODE_ENV": "development" },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-typescript-next"
      ]
    }
  },
  "mounts": [
    "type=volume,source=pnpm-store-${localWorkspaceFolderBasename},target=/home/node/.local/share/pnpm",
    "source=${localEnv:HOME}/.gitconfig-personal,target=/home/node/.gitconfig-personal,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh,target=/home/node/.ssh,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh/config.devcontainer,target=/home/node/.ssh/config,type=bind,consistency=cached"
  ],
  "shutdownAction": "stopContainer"
}
